<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.agenda_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ForgotPass" android:screenOrientation="sensor"> </activity>
        <activity android:name=".Register"  android:screenOrientation="sensor" />
        <activity android:name=".Authentication"  android:screenOrientation="sensor" />
        <activity android:name=".Login"  android:screenOrientation="sensor"/>
        <activity android:name=".SplashActivity"  android:screenOrientation="sensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER"  />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"  android:screenOrientation="sensor">  </activity>
        <activity android:name=".ResetPwPopUp" android:screenOrientation="sensor"> </activity>
    </application>

</manifest>